<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.carnagelabs.sampleapp"
        version   = "2.0.0">
            
    <name>Sample Application</name>
    <description>Test App</description>

    <author href="http://www.carnagelabs.com" email="support@carnagelabs.com">Carnage Labs</author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/battery"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />

    <icon src="icon.png" />
    <icon src="resources/images/icons/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="resources/images/icons/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="resources/images/icons/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="resources/images/icons/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="resources/images/icons/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="resources/images/icons/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="resources/images/icons/ios/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="resources/images/icons/ios/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="resources/images/icons/ios/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="resources/images/icons/ios/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="resources/images/icons/webos/icon-64.png"          gap:platform="webos" />
    <icon src="resources/images/icons/windows-phone/icon-48.png"  gap:platform="winphone" />
    <icon src="resources/images/icons/windows-phone/icon-173.png" gap:platform="winphone"   gap:role="background" />

    <gap:splash src="resources/images/screens/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="resources/images/screens/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="resources/images/screens/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="resources/images/screens/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="resources/images/screens/blackberry/screen-225.png"         gap:platform="blackberry" />
    <gap:splash src="resources/images/screens/ios/screen-iphone-portrait.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="resources/images/screens/ios/screen-iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="resources/images/screens/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="resources/images/screens/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="resources/images/screens/windows-phone/screen-portrait.jpg" gap:platform="winphone" />
            
    <access origin="http://phonegap.com" subdomains="true" />
</widget>
